<h1>Events</h1>

<p>This page will allow viewing and managing campus events.</p>

<table class="table">
  <thead>
    <tr>
      <th>Event ID</th>
      <th>Name</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>Expected Attendance</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#if events.length}}
      {{#each events}}
        <tr>
          <td>{{this.eventId}}</td>
          <td>{{this.eventName}}</td>
          <td>{{this.eventDate}}</td>
          <td>{{this.startTime}}</td>
          <td>{{this.expectedAttendance}}</td>
          <td>{{this.Locations_locationId}}</td>
          <td>
            <form action="/delete-event" method="POST" style="display:inline;">
              <input type="hidden" name="eventId" value="{{this.eventId}}">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    {{else}}
      <tr><td colspan="7">No event data yet.</td></tr>
    {{/if}}
  </tbody>
</table>

<h3>Update Event Details</h3>
<form action="/update-event" method="POST" class="update-form">
  <label for="eventId">Event ID:</label>
  <input type="number" id="eventId" name="eventId" required>

  <label for="eventName">New Event Name:</label>
  <input type="text" id="eventName" name="eventName" placeholder="Enter new event name">

  <label for="eventDate">New Date:</label>
  <input type="date" id="eventDate" name="eventDate">

  <label for="startTime">New Start Time:</label>
  <input type="time" id="startTime" name="startTime">

  <label for="expectedAttendance">New Expected Attendance:</label>
  <input type="number" id="expectedAttendance" name="expectedAttendance" placeholder="e.g. 150">

  <label for="locationId">New Location ID:</label>
  <input type="number" id="locationId" name="locationId" placeholder="e.g. 2">

  <button type="submit">Update Event</button>
</form>
<button>Add Event</button>
