<h1>Departments</h1>

<p>This page will allow viewing, adding, editing, and deleting departments.</p>

<table>
  <thead>
    <tr>
      <th>Department ID</th>
      <th>Department Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

     {{#if departmetns.length}}
      {{#each departments}}
        <tr>
          <td>{{this.departmentId}}</td>
          <td>{{this.departmentName}}</td>
        </tr>
      {{/each}}
    {{else}}
    <tr><td colspan="5">No student data yet.</td></tr>
    {{/if}}
    <tr><td colspan="3">No department data yet.</td></tr>
  </tbody>
</table>

<button>Add Department</button>
